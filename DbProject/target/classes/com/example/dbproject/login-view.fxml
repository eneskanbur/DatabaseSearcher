<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dbproject.LoginController"
          hgap="10" vgap="10" alignment="CENTER" style="-fx-background-color: linear-gradient(to bottom, #f0f4f8, #d9e6f2); -fx-padding: 20; -fx-border-color: #a3bcd3; -fx-border-radius: 10; -fx-border-width: 1; -fx-background-radius: 10;">

    <Label text="JDBC URL:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size: 14px; -fx-text-fill: #333;" alignment="CENTER_RIGHT" />
    <TextField fx:id="jdbcUrlField" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-font-size: 13px; -fx-pref-width: 300px; -fx-background-radius: 5;" />

    <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 14px; -fx-text-fill: #333;" alignment="CENTER_RIGHT" />
    <TextField fx:id="usernameField" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-font-size: 13px; -fx-pref-width: 300px; -fx-background-radius: 5;" />

    <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-size: 14px; -fx-text-fill: #333;" alignment="CENTER_RIGHT" />
    <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-font-size: 13px; -fx-pref-width: 300px; -fx-background-radius: 5;" />

    <Button text="Connect" onAction="#connectToDatabase" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5; -fx-padding: 5 10;" alignment="CENTER" />

    <Label fx:id="statusLabel" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-text-fill: #e53935; -fx-font-style: italic; -fx-font-size: 12px;" alignment="CENTER" />
</GridPane>